{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": "./src",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/server/index.ts"],
    "exclude": ["node_modules"]
}
